@model IEnumerable<Leave_Management.Models.ModelView.LeaveTypeVM>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    
    <div class="col-md-10 offset-1">

        <h1 class="text-center">Leave Types</h1>
        <hr />

        <p>
            <a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus green" area-hidden="true"></i> Create New</a>
        </p>
        <table id="tblLeaveType" class="table table-striped table-bordered table-sm table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateCreated)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration:none">
                                <i class="fa fa-info-circle fa-sm text-info" aria-hidden="true"></i>
                            </a> |
                            <a asp-action="Edit" asp-route-id="@item.Id" style="text-decoration:none">
                                <i class="fa fa-pencil-square-o fa-sm text-success" aria-hidden="true"></i>
                            </a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" style="text-decoration:none" onclick="return confirm('Are you sure you want to delete this record?')">
                                <i class="fa fa-trash fa-sm text-danger" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {

    <script>
        $(document).ready(function () {
            $('#tblLeaveType').DataTable();
        });
    </script>

}